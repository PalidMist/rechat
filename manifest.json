{
  "manifest_version": 2,

  "name": "ReChat for Twitchâ„¢",
  "short_name": "ReChat",
  "description": "Adds chat messages from the past to your favorite Twitch VODs.",
  "author": "Nils Caspar",
  "homepage_url": "http://www.rechat.org/",
  "version": "0.2",

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "permissions": [
    "http://www.twitch.tv/",
    "https://api.twitch.tv/kraken/",
    "http://*.rechat.org/"
  ],
  "content_security_policy": "script-src 'self' https://api.twitch.tv/; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://www.twitch.tv/*"],
      "js": ["vendor/js/jquery.min.js", "vendor/js/please.min.js", "js/script.js"]
    }
  ],

  "web_accessible_resources": [
    "js/injected.js",
    "images/spinner.gif",
    "images/sad.png"
  ]

}
