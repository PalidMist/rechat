{
  "manifest_version": 2,

  "name": "ReChat for Twitchâ„¢",
  "short_name": "ReChat",
  "description": "Adds chat messages from the past to your favorite Twitch VODs.",
  "author": "Nils Caspar",
  "homepage_url": "http://www.rechat.org/",
  "version": "0.5",

  "icons": {
    "16": "res/icon16.png",
    "48": "res/icon48.png",
    "64": "res/icon64.png",
    "128": "res/icon128.png"
  },

  "permissions": [
    "http://www.twitch.tv/",
    "https://api.twitch.tv/kraken/",
    "http://*.rechat.org/"
  ],
  "content_security_policy": "script-src 'self' https://api.twitch.tv/; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["http://www.twitch.tv/*"],
      "js": ["js/jquery.min.js", "js/please.js", "js/rechat.js"]
    }
  ],

  "web_accessible_resources": [
    "js/injected.js",
    "res/spinner.gif",
    "res/sad.png"
  ]

}
